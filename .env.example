# Application
APP_NAME=InboxMind
APP_ENV=development
DEBUG=True
LOG_LEVEL=INFO

# API
API_V1_PREFIX=/api/v1
SECRET_KEY=your-secret-key-min-32-chars-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/inboxmind
# For local dev: sqlite+aiosqlite:///./inboxmind.db

# Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=gcp-starter
PINECONE_INDEX_NAME=email-rag-prod
PINECONE_DIMENSION=1536
PINECONE_METRIC=cosine

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/oauth/google/callback

# Microsoft OAuth
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=common
MICROSOFT_REDIRECT_URI=http://localhost:8000/api/v1/oauth/microsoft/callback

# Token Encryption
FERNET_KEY=your-fernet-key-generate-with-cryptography.fernet.generate_key()

# Redis (for Celery/background jobs)
REDIS_URL=redis://localhost:6379/0

# Background Jobs
EMAIL_SYNC_INTERVAL_MINUTES=15
EMBEDDING_BATCH_SIZE=50

# CrewAI
CREWAI_VERBOSE=True
MAX_RETRIEVAL_RESULTS=20
CONTEXT_WINDOW_SIZE=10000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
